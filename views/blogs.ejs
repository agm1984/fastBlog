<% include partials/header %>

<% blogs.forEach(function(blog) { %>
    <div class="blogCard">
      <div class="postThumbnail"><img src="<%= blog.image %>" /></div>
      <div class="postInfo">
        <div><h1><%= blog.title %></h1></div>
        <div><%= blog.body %></div><br /><br />
        <div>Posted: <%= blog.created.toDateString() %></div>
        <div><a href="/blogs/<%= blog._id %>">Read Post</a></div>
      </div>
    </div>
<% }); %>

<% include partials/footer %>
